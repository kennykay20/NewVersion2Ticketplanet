<script>
    $(document).ready(function () {

        $("#proceedEventBtn").click(function () {

            if ($("#Fullname").val() === "" || $('#phoneNo').val() === "" ||
                    $('#email').val() === "" ||
                    $('#NoOfPersons').val() === "" ||
                    $('#TicketCategory').val() === "" ||
                    $('#Amount').val() === "" ||
                    $('#comments').val() === "") {

                $(this).attr("data-target", "");
                alertify.error("One or Two Compulsory Fields is Empty");
                return;
            }
             else {
                
                $(this).attr("data-target", "#binProcess");

               
            }


        });


